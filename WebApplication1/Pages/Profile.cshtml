@page
@model WebApplication1.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
    var role = HttpContext.Session.GetString("Role");
    var teamName = HttpContext.Session.GetString("TeamName");
}

<h2>My Profile</h2>

<form method="post">
    <div class="form-group mb-3">
        <label><i class="bi bi-person-fill me-1"></i> Username</label>
        <input asp-for="Input.Username" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label><i class="bi bi-person-badge-fill me-1"></i> Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label><i class="bi bi-envelope-at-fill me-1"></i> Email</label>
        <input asp-for="Input.Email" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label><i class="bi bi-phone-fill me-1"></i> Phone Number</label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label><i class="bi bi-building me-1"></i> Company Name</label>
        <input asp-for="Input.CompanyName" class="form-control" />
    </div>

    <div class="d-flex flex-column flex-md-row gap-2">
        <button type="submit" class="btn btn-primary px-4">Save Changes</button>

        @if (HttpContext.Session.GetString("Role") == "tl")
        {
            <a href="/Team/ManageTeam" class="btn btn-secondary px-4">
                <i class="bi bi-gear-fill me-1"></i> Manage Team
            </a>
        }
    </div>
</form>
